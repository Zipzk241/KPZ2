<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:id="boardGrid" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.kpz2.ui.GameController"
          alignment="CENTER" hgap="5" vgap="5"
          style="-fx-padding: 20; -fx-background-color: #f0f0f0;">

    <Button fx:id="cell00" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="100" prefHeight="100" />
    <Button fx:id="cell01" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="100" prefHeight="100" />
    <Button fx:id="cell02" GridPane.rowIndex="0" GridPane.columnIndex="2" prefWidth="100" prefHeight="100" />

    <Button fx:id="cell10" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="100" prefHeight="100" />
    <Button fx:id="cell11" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="100" prefHeight="100" />
    <Button fx:id="cell12" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="100" prefHeight="100" />

    <Button fx:id="cell20" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="100" prefHeight="100" />
    <Button fx:id="cell21" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="100" prefHeight="100" />
    <Button fx:id="cell22" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="100" prefHeight="100" />
    <Button fx:id="restartButton" text="Restart" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="3"
            prefWidth="300" prefHeight="40" onAction="#restartGame"/>
</GridPane>
